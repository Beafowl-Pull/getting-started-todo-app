{
  "name": "backend",
  "version": "1.0.0",
  "description": "Todo app backend - refactored to TypeScript",
  "main": "dist/index.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --config jest.config.json --watch",
    "test:coverage": "jest --config jest.config.json --coverage"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mysql2": "^3.14.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "wait-port": "^1.1.0",
    "zod": "^3.23.0",
    "pino": "^9.14.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "pino": "^9.14.0"
  },
  "resolutions": {
    "@babel/core": "7.23.9"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/__tests__/**"
    ],
    "exec": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/index.ts"
  }
}