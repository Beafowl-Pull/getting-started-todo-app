{
    "name": "backend",
    "version": "1.0.0",
    "description": "Todo app backend - refactored to TypeScript",
    "main": "dist/index.js",
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "start": "node dist/index.js",
        "dev": "nodemon",
        "lint": "eslint 'src/**/*.ts'",
        "lint:fix": "eslint 'src/**/*.ts' --fix",
        "format": "prettier --write 'src/**/*.ts'",
        "format:check": "prettier --check 'src/**/*.ts'",
        "lint:arch": "depcruise src --config .dependency-cruiser.cjs",
        "test": "jest --config jest.config.json --detectOpenHandles",
        "test:watch": "jest --config jest.config.json --watch",
        "test:coverage": "jest --config jest.config.json --coverage"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "better-sqlite3": "^12.0.0",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.3",
        "mysql2": "^3.14.1",
        "pino": "^9.0.0",
        "pino-pretty": "^11.0.0",
        "uuid": "^11.1.0",
        "wait-port": "^1.1.0",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/bcrypt": "^6.0.0",
        "@types/better-sqlite3": "^7.6.0",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.0.0",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "dependency-cruiser": "^17.3.8",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.0.0",
        "globals": "^17.3.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "prettier": "^3.2.4",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.0"
    },
    "resolutions": {
        "@babel/core": "7.23.9"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            "src/__tests__/**"
        ],
        "exec": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/index.ts"
    }
}
