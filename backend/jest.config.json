{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/__tests__/**/*.test.ts", "**/__tests__/**.test.ts"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.test.json"
      }
    ]
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/types/**",
    "!src/persistence/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
